<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingHorizontal="20dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/welcome_to"
        android:layout_width="150.74dp"
        android:layout_height="30.83dp"
        android:layout_marginTop="101.64dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="12sp"
        android:text="@string/welcome_to"
        android:textAppearance="@style/welcome_to"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipe_book"
        android:layout_width="285.5dp"
        android:layout_height="54.82dp"
        android:layout_marginTop="-6.5dp"
        android:gravity="bottom"
        android:text="@string/recipe_book"
        android:textAppearance="@style/recipe_book"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_to" />

    <View
        android:id="@+id/logo"
        android:layout_width="59.38dp"
        android:layout_height="65.10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="107.35dp"
        android:background="@drawable/logo" />


    <View
        android:id="@+id/emailInputView"
        android:layout_width="match_parent"
        android:layout_height="51.39dp"
        android:layout_marginTop="73.5dp"
        android:background="@drawable/input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_book" />



    <EditText
        android:id="@+id/emailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21.70dp"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:lineSpacingExtra="8sp"
        android:textAppearance="@style/email"
        app:layout_constraintStart_toStartOf="@+id/emailInputView"
        app:layout_constraintTop_toTopOf="@+id/emailInputView"
        app:layout_constraintBottom_toBottomOf="@+id/emailInputView"/>

    <View
        android:id="@+id/passwordInputView"
        android:layout_width="match_parent"
        android:layout_height="51.39dp"
        android:layout_marginTop="18.27dp"
        android:background="@drawable/input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInputView" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21.70dp"
        android:gravity="center_vertical"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:lineSpacingExtra="8sp"
        android:textAppearance="@style/password"
        app:layout_constraintStart_toStartOf="@+id/passwordInputView"
        app:layout_constraintTop_toTopOf="@+id/passwordInputView"
        app:layout_constraintBottom_toBottomOf="@+id/passwordInputView"/>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="right"
        android:text="@string/forgot_pass"
        android:textAppearance="@style/forgot_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputView" />

    <View
        android:id="@+id/loginView"
        android:layout_width="match_parent"
        android:layout_height="51.40dp"
        android:layout_marginTop="28.55dp"
        android:background="@drawable/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass" />


    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:text="@string/label"
        android:textAppearance="@style/label"
        app:layout_constraintStart_toStartOf="@+id/loginView"
        app:layout_constraintTop_toTopOf="@+id/loginView"
        app:layout_constraintEnd_toEndOf="@+id/loginView"
        app:layout_constraintBottom_toBottomOf="@+id/loginView"/>

    <TextView
        android:id="@+id/login_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/login_with"
        android:textAppearance="@style/login_with"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginView" />

    <View
        android:id="@+id/facebookView"
        android:layout_width="120dp"
        android:layout_height="51.40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="13.70dp"
        android:background="@drawable/facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/googleView"
        app:layout_constraintTop_toBottomOf="@+id/login_with" />


    <View
        android:id="@+id/googleView"
        android:layout_width="120dp"
        android:layout_height="51.40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="13.70dp"
        android:background="@drawable/google"
        app:layout_constraintStart_toEndOf="@+id/facebookView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/login_with"/>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|top"
        android:text="@string/or"
        android:textAppearance="@style/or"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebookView" />

    <View
        android:id="@+id/create_an_account_view"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/create_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or" />

    <TextView
        android:id="@+id/create_an_account"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:lineSpacingExtra="9sp"
        android:text="@string/create_an_account"
        android:textAppearance="@style/Create_an_account"
        app:layout_constraintStart_toStartOf="@+id/create_an_account_view"
        app:layout_constraintEnd_toEndOf="@id/create_an_account_view"
        app:layout_constraintTop_toTopOf="@+id/create_an_account_view"
        app:layout_constraintBottom_toBottomOf="@+id/create_an_account_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>
