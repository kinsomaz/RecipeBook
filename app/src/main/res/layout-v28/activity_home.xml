<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- Home -->
    <RelativeLayout
        android:id="@+id/welcome_container"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:clipToOutline="true"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Welcome David -->
        <TextView
            android:id="@+id/welcome_dav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="74dp"
            android:text="@string/welcome_dav"
            android:textAppearance="@style/welcome_dav"
            android:lineSpacingExtra="13sp"
            android:gravity="center_vertical"
            />

        <!-- Avatar -->
        <View
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="66dp"
            android:background="@drawable/avatar"
            android:alpha="1.0"
            />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollViewLayout"
        android:layout_width="match_parent"
        android:layout_height="770dp"
        android:background="@drawable/card"
        android:elevation="46dp"
        android:outlineAmbientShadowColor="#CC000000"
        android:outlineSpotShadowColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/welcome_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="770dp"
            app:layout_constraintTop_toTopOf="@+id/scrollViewLayout"
            android:background="@drawable/card">

            <!-- Card1 -->
            <View
                android:id="@+id/card1"
                android:layout_width="114dp"
                android:layout_height="98dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/card1"
                android:elevation="20dp"
                android:outlineAmbientShadowColor="#14000000"
                android:outlineSpotShadowColor="#80000000"
                app:layout_constraintEnd_toStartOf="@+id/card2"
                app:layout_constraintStart_toStartOf="@+id/scrollView"
                app:layout_constraintTop_toTopOf="@+id/scrollView"/>


            <ImageView
                android:layout_width="28.7dp"
                android:layout_height="40dp"
                android:src="@drawable/icon1"
                app:layout_constraintTop_toTopOf="@id/card1"
                app:layout_constraintBottom_toBottomOf="@id/card1"
                app:layout_constraintStart_toStartOf="@id/card1"
                app:layout_constraintEnd_toEndOf="@id/card1"/>

            <!-- Card2 -->
            <View
                android:id="@+id/card2"
                android:layout_width="114dp"
                android:layout_height="98dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/card1"
                android:elevation="20dp"
                android:outlineAmbientShadowColor="#14000000"
                android:outlineSpotShadowColor="#80000000"
                app:layout_constraintEnd_toStartOf="@+id/card3"
                app:layout_constraintStart_toEndOf="@+id/card1"
                app:layout_constraintTop_toTopOf="@+id/scrollView"/>

            <!-- Card3 -->
            <View
                android:id="@+id/card3"
                android:layout_width="114dp"
                android:layout_height="98dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/card1"
                android:elevation="20dp"
                android:outlineAmbientShadowColor="#14000000"
                android:outlineSpotShadowColor="#80000000"
                app:layout_constraintEnd_toEndOf="@+id/scrollView"
                app:layout_constraintStart_toEndOf="@+id/card2"
                app:layout_constraintTop_toTopOf="@+id/scrollView"/>

            <!-- Card4 -->
            <View
                android:id="@+id/card4"
                android:layout_width="114dp"
                android:layout_height="98dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/card1"
                android:elevation="20dp"
                android:outlineAmbientShadowColor="#14000000"
                android:outlineSpotShadowColor="#80000000"
                app:layout_constraintEnd_toStartOf="@+id/card5"
                app:layout_constraintStart_toStartOf="@+id/scrollView"
                app:layout_constraintTop_toBottomOf="@+id/card1"/>

            <!-- Card5 -->
            <View
                android:id="@+id/card5"
                android:layout_width="114dp"
                android:layout_height="98dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/card1"
                android:elevation="20dp"
                android:outlineAmbientShadowColor="#14000000"
                android:outlineSpotShadowColor="#80000000"
                app:layout_constraintEnd_toStartOf="@+id/card6"
                app:layout_constraintStart_toEndOf="@+id/card4"
                app:layout_constraintTop_toBottomOf="@+id/card2"/>

            <!-- Card6 -->
            <View
                android:id="@+id/card6"
                android:layout_width="114dp"
                android:layout_height="98dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/card1"
                android:elevation="20dp"
                android:outlineAmbientShadowColor="#14000000"
                android:outlineSpotShadowColor="#80000000"
                app:layout_constraintEnd_toEndOf="@+id/scrollView"
                app:layout_constraintStart_toEndOf="@+id/card5"
                app:layout_constraintTop_toBottomOf="@+id/card3"/>

            <View
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/card1"
                app:layout_constraintTop_toBottomOf="@+id/card4"/>

            <!-- line -->
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@drawable/line"
                android:alpha="0.3"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/card7" />

            <!-- Notifications -->
            <TextView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23.4dp"
                android:layout_marginStart="23dp"
                android:text="@string/notification"
                android:textAppearance="@style/notification"
                android:lineSpacingExtra="-3sp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />


            <!-- Clear -->
            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23.4dp"
                android:layout_marginEnd="23dp"
                android:text="@string/clear"
                android:textAppearance="@style/clear"
                android:gravity="center_horizontal|top"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Rectangle 3 -->
            <View
                android:id="@+id/rectangle_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@drawable/line"
                android:alpha="0.5"
                app:layout_constraintTop_toBottomOf="@+id/clear"
                app:layout_constraintEnd_toEndOf="@+id/clear"
                app:layout_constraintStart_toStartOf="@+id/clear"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>